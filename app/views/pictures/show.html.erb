<p id="notice"><%= notice %></p>

<body>
    <header>
      <nav>
        <ul class="navbar">
          <li><%= link_to 'Home', pictures_path %></li>
        </ul>
      </nav>
    </header>

    <div class="each-location">
      <p>
        <h1><%= @picture.location %></h1>
      </p>
      <p class="picture">
        <%= image_tag @picture.url %>
      </p>

      <p>
        <strong><%= @picture.location %>:</strong>
        <%= @picture.description %>
      </p>

      <h5>New Review</h5>
      <%= render 'reviews/form' %>

      <h5>Reviews</h5>
      <% @picture.reviews.each do |review| %>
        <p>
          <%= review.comment %><br>
          <i>Posted <%= time_ago_in_words review.created_at %></i>
        </p>
      <% end %>
    </div>

    <footer>
      <nav>
        <ul class="navbar">
          <li><%= link_to 'Home', pictures_path %></li>
        </ul>
      </nav>
    </footer>
</body>
