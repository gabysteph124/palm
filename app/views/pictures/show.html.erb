<p id="notice"><%= notice %></p>

<p>
  <!-- <strong>Url:</strong> -->
  <%= image_tag @picture.url %>
</p>

<p>
  <strong>Location:</strong>
  <%= @picture.location %>
</p>

<p>
  <strong>Description:</strong>
  <%= @picture.description %>
</p>

<h3>Reviews</h3>
<% @picture.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <i>Posted <%= time_ago_in_words review.created_at %></i>
  </p>
<% end %>

<h3>New Review</h3>
<%= render 'reviews/form' %>

