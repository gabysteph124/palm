<%= link_to 'Home', pictures_path, class: 'btn btn-default btn-sm' %>
<p id="notice"><%= notice %></p>

<p>
  <h1><%= @picture.location %></h1>
</p>

<p>
  <%= image_tag @picture.url %>
</p>

<p>
  <strong>Description:</strong>
  <%= @picture.description %>
</p>

<h3>Reviews</h3>
<% @picture.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <i>Posted <%= time_ago_in_words review.created_at %></i>
  </p>
<% end %>

<h3>New Review</h3>
<%= render 'reviews/form' %>
